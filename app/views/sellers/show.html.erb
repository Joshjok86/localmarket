<h1>Here is seller show page</h1>
<h3>sellers#show</h3>

<% if @seller.photos.present? %>
  <% @seller.photos.each do |photo| %>
    <%= cl_image_tag photo.key, width: 100, height: 100, crop: :fill %>
  <% end %>
<% end %>

<%= @seller.seller_name %>
<%= @seller.description %>
<%= @seller.address %>
<%= @seller.website %>
<%= @seller.social_media_link %>
<%= @seller.phone_number %>
<%= @seller.opening_time %>
<%= @seller.closing_time %>


<%# Reviews %>

<% @seller.reviews.each do |review| %>
  <%= review.title %>
  <%= review.user.username %>
  <%= review.content %>
  <% if review.photos.present? %>
    <% review.photos.each do |photo| %>
      <%= cl_image_tag photo.key, crop: :fill %>
    <% end %>
  <% end %>
<% end %>

<% if policy(@review).new? %>
  <h4>Leave a review for this seller</h4>
  <%= simple_form_for [@seller, @review] do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
<% end %>


