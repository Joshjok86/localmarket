<div class="banner">
  <div class="overlay d-flex flex-column justify-content-center align-items-center">
    <h1><span id="header">Eat local Food</></h1>
  </div>
</div>


<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: sellers_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= select_tag :radius, options_for_select([['1 km', 1], ['5 km', 5], ['10 km', 10], ['50 km', 50], ['100 km', 100]], selected: params[:radius]), class: "form-control" %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
